<%- include('partials/header') %>

<div class="login-form">
  <form action="/login" method="POST">
      <h2 class="text-center">Login</h2>		
      <div class="text-center social-btn">
          <a href="/auth/google" class="btn btn-dark btn-block" role="button"><i class="fab fa-google"></i> Sign in with <b>Google</b></a>
      </div>
  <div class="or-seperator"><i>or</i></div>
      <div class="form-group">
        <div class="input-group">                
              <div class="input-group-prepend">
                  <span class="input-group-text">
                      <span class="fa fa-user"></span>
                  </span>                    
              </div>
              <input type="text" class="form-control" name="username" placeholder="Username" required="required">
          </div>
      </div>
  <div class="form-group">
          <div class="input-group">
              <div class="input-group-prepend">
                  <span class="input-group-text">
                      <i class="fa fa-lock"></i>
                  </span>                    
              </div>
              <input type="password" class="form-control" name="password" placeholder="Password" required="required">
          </div>
      </div>        
      <div class="form-group">
          <button type="submit" class="btn btn-dark btn-block login-btn">Sign in</button>
      </div>   
  </form>
  <div class="hint-text">Don't have an account? <a href="/register" class="text-success">Register Now!</a></div>
</div>

